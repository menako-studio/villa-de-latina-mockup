rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to trainings collection for all users
    match /trainings/{trainingId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == resource.data.adminEmail;
    }
    
    // Allow read/write access to users collection for authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin-only collections
    match /admin/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}